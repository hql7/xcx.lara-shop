
/* 公共部分头部 */
.cHeader{
  position: fixed;
  top: 0;
  left: 0;  
  width: 100%;
  height: 80rpx;
  z-index: 100;
  background: linear-gradient(to right,#ff285b,#ff2338);
}
 .search{
  position: relative;
  top: 14rpx;
  left: 0;
  width: 550rpx;
  margin: 0 auto;
} 
.searchInp{
  padding-left: 58rpx;
  width: 492rpx;
  height: 48rpx;
  font-size: 24rpx;
  color: #555555;
  outline: none;
  border: none;
  border-radius: 40rpx;
  background: linear-gradient(to right,#ffe5e5,#ffe5e2);
}
.plcol{
  color: #f51322;
}
.search icon{
  position: absolute;
  top: 50%;
  margin-top: -13rpx;
  left: 20rpx;
  z-index: 10;
}
.cHeader .left,.cHeader .right{
  position: absolute;
  height: 100%;
  top: 0;    
}
.cHeader .left{
  display: flex;
  align-items: center;
  left: 30rpx;
  color: #fff;
}
.cHeader .left text{
  font-size: 18px;
}

.cHeader .right{
  right: 30rpx;  
  display: flex;
  flex-flow: column;
  justify-content: center;
}
.right text{
  color: #fff;
}
.right .message{
  font-size: 16rpx;
  margin-top: -8rpx;
}