/* pages/logs/login/login.wxss */
page{
  background-color: #f1f2f7;
}
.top{
  position: absolute;
  width: 100%;
  height: 280rpx;
}
.top .img{
  position: relative;
  width: 300rpx;
  height: 100rpx;
  margin:90rpx auto;
}
.top .img image{
  width: 300rpx;
  height: 100rpx;
  float: left;
}
.content{
  position: absolute;
  width: 100%;
  height: 200rpx;
  margin-top: 280rpx;
  background-color: #fff;
}
.username{
  width: 100%;
  height: 100rpx;
  border-bottom: solid 2rpx #f1f2f7;
}
.psd{
  width: 100%;
  height: 100rpx;
}
.username text{
  width: 80rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 26rpx;
  color: #5e5e5e;
  margin-left: 20rpx;
  float: left;
}
.psd text{
  width: 80rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 26rpx;
  color: #5e5e5e;
  margin-left: 20rpx;
  float: left;
}
input{
  width: 400rpx;
  height: 100rpx;
  padding-left: 36rpx;
  font-size: 26rpx;
  float: left;
}
.submit{
  position: absolute;
  width: 92%;
  height: 80rpx;
  margin-left: 4%;
  margin-top: 100rpx;
  font-size: 30rpx;
  background: linear-gradient(to right, #fa5181, #ff2b49);
  color:#fff;
}
.register{
  position: absolute;
  width: 94%;
  height: 66rpx;
  line-height: 66rpx;
  font-size: 26rpx;
  text-align: right;
  color: #00abe6;
  margin-top: 680rpx;
}