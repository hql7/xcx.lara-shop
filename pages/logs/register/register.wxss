/* pages/logs/register/register.wxss */
page{
  background-color: #f1f2f7;
}
.form{
  width: 100%;
}
.form view{
  background-color: #fff;
}
.form view {
  display: flex;  
  align-items: center;
  width: 100%;
  height: 100rpx;
  font-size: 26rpx;
  border-bottom: 2rpx solid #f1f2f7;
}
.form view text:nth-child(1){
  width: 20%;
  padding-left: 2%; 
  color: #333;
}
.form view input{
  padding-left: 2%;
}
.form .username input,.form .phone input{
  width: 74%;
  min-width: 74%;
}
.phcolor{
  font-size: 26rpx;
}
.form .code input{
  width: 44%;
  min-width: 44%;
}
.form .psd input{
  width: 46%;
  min-width: 46%;
}
.form view .gain{
  width: 30%;
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 0;
  text-align: center;
  color: #a6a6a6;
  border-left: 2rpx solid #f1f2f7;
}
.psd .lock{
  width: 27%;
  font-size: 40rpx;
  text-align: center;
}
.register{
  width: 92%;
  height: 80rpx;
  margin-left: 4%;
  font-size: 30rpx;
  color:#fff;
  margin-top: 60rpx;
  background: linear-gradient(to right, #fa5181, #ff2b49);  
}
.bottom{
  display: flex;
  align-items: center;
  justify-content: flex-end;  
  width: 96%;
  margin-top: 40rpx; 
}
.bottom .login{
  width: 80rpx;
  font-size: 24rpx;
  text-align: center;
  color: #f51322;
  border-radius: 6rpx;
  border: 2rpx solid #f51322;
}
.bottom .already{
  margin-right: 18rpx;
  color: #808080;
  font-size: 24rpx;
}