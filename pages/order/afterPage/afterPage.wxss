/* pages/order/afterPage/afterPage.wxss */
page{
  background-color: #f1f2f6;
}

.goods{
  width: 100%;
  height: 210rpx;
  background-color: #fff;
  border-bottom: solid #e6e6e6 1rpx;
  border-top: solid #e6e6e6 1rpx;
}
.goods .left{
  width: 150rpx;
  height: 150rpx;
  float: left;
  margin-left: 4%;
  margin-top: 30rpx;
}
.goods .left image{
  width: 150rpx;
  height: 150rpx;
}
.goods .right{
  display: flex;
  flex-flow: column;
  justify-content: center;
  width: 550rpx;
  height: 150rpx;
  float: right;
  margin-top: 30rpx;
}
.goods .right .name{
  display: inline-block;
  width: 100%;
  font-size: 26rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 50rpx;
}
.goods .right .num{
  display: inline-block;
  width: 100%;
  font-size: 26rpx;
  line-height: 50rpx;
  color: #999;
}
.goods .right .price{
  display: inline-block;
  width: 100%;
  font-size: 26rpx;
  line-height: 50rpx;
  color: #F51322;
}
.goodsInfo{
  width: 100%;
  height: 1100rpx;
  background-color: #fff;
  margin-top: 30rpx;
  border-top: solid #e6e6e6 1rpx;
  border-bottom: solid #e6e6e6 1rpx;
}
.goodsInfo view{
   width: 100%;
  height: 80rpx; 
  margin-top: 20rpx;
}
.goodsInfo .title{
  float: left;
  width: 160rpx;
  height: 80rpx;
  font-size: 30rpx;
  color: #333;
  line-height: 100rpx;
  text-align: right;
  margin-left: 4%;
}
.goodsInfo .num input{
  width: 130rpx;
  height: 50rpx;
  border: solid #e6e6e6 1rpx;
  background-color: #f6f6f6;
  float: left;
  margin-left: 30rpx;
  text-align: center;
  margin-top: 25rpx;
}
.goodsInfo .num .afternum{
  font-size: 24rpx;
  color: #999;
  line-height: 100rpx;
  margin-left: 30rpx;
}
.goodsInfo .becase input{
  width: 400rpx;
  height: 80rpx;
  border: solid #e6e6e6 1rpx;
  float: left;
  margin-left: 30rpx;
  margin-top: 10rpx;
}
.goodsInfo .description{
  width: 100%;
  height: 200rpx;
}
.goodsInfo .description textarea{
  width: 400rpx;
  height: 160rpx;
  float: left;
  border: solid #e6e6e6 1rpx;
  margin-left: 30rpx;
  margin-top: 30rpx;
  font-size: 24rpx;
}
.goodsInfo .page__bd{
  width:100%;
  height:300rpx;
  margin-left: 4%;
}
.page__bd .weui-uploader{
  display:flex;
  flex-flow:row;
  width:100%;
  height:300rpx;
}
.weui-uploader .weui-uploader__hd{
  width: 200rpx;
  height: 200rpx;
}
.weui-uploader__hd .weui-uploader__title{
  width: 160rpx;
  height: 200rpx;
  font-size: 30rpx;
  line-height: 200rpx;
}
.page__bd .weui-uploader__bd{
  width:500rpx;
  height:300rpx;
}
.weui-uploader__bd .weui-uploader__files{
  width:500rpx;
  height:200rpx;
  margin-top: 50rpx;
}
.weui-uploader__files .weui-uploader__file{
  width:150rpx;
  height:150rpx;
  float: left;
}
.weui-uploader__files .weui-uploader__input-box{
  width:150rpx;
  height:150rpx;
}
.weui-uploader__input{
  width:150rpx !important; 
  height:150rpx !important;
  float: left;
}
.userInfo{
  width: 100%;
  height: 800rpx;
  background-color: #fff;
  margin-top: 30rpx;
  border-top: solid #e6e6e6 1rpx;
  padding-top: 30rpx;
  border-bottom: solid #e6e6e6 1rpx;
}
.userInfo view{
  width: 100%;
  height: 100rpx;
  margin-top: 20rpx;
}
.userInfo view label{
  display: inline-block;
  width: 160rpx;
  height: 100rpx;
  font-size: 30rpx;
  color: #333;
  line-height: 100rpx;
  text-align: right;
  margin-left: 4%;
}
.userInfo view input{
  width: 400rpx;
  height: 80rpx;
  font-size: 30rpx;
  line-height: 80rpx;
  border: solid #e6e6e6 1rpx;
  float: right;
  margin-top: 10rpx;
  margin-right: 18%;
}
.userInfo .address{
  font-size: 28rpx;
  margin-left: 20rpx;
  color: #666;
}
.userInfo button{
  width: 180rpx;
  height: 80rpx;
  font-size: 30rpx;
  background-color: #f0f9e9;
  color: #333;
  margin-left: 28%;
  margin-top: 40rpx;
}
.serverType{
  display: flex;
  flex-flow: row;
  align-items: center;
}
.server {
  display: flex;
  flex-flow: row;

}
.serverType .stitle{
  width: 200rpx;
  height: 80rpx;
  font-size: 30rpx;
  color: #333;
  line-height: 90rpx;
  text-align: right;
  margin-left: 4%;
}
.server view{
  font-size: 28rpx;
  width: 130rpx;
  color:#333;
  height: 50rpx;
  margin-left:20rpx; 
  text-align: center;
  line-height: 50rpx;
  border: 1rpx solid #e6e6e6;
}
.server .refundActive {
  border: 1rpx solid #F51322;
  color: #F51322;
}
.refund {
  display: flex;
  flex-flow: row;
}
.refund .refundStyle {
  font-size: 28rpx;
  width: 220rpx;
  color:#333;
  height: 60rpx;
  margin-left:20rpx; 
  text-align: center;
  line-height: 60rpx;
  border: 1rpx solid #e6e6e6;
}
.refund .refundActive {
  border: 1rpx solid #F51322;
  color: #F51322;
}
