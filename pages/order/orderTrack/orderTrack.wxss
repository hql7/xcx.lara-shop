/* pages/order/orderTrack/orderTrack.wxss */
Page {
  background-color: rgb(244,244,244);
}
.page{
  width: 100%;
  height: 100%;
  padding: 0 20rpx;
  background-color: rgb(244,244,244);
}
.data-v-top {
    width: 100%;
    height: 250rpx;
    position: fixed;
    top: 0;
    left: 0;
     z-index: -1; 
    background: -webkit-gradient(linear, left top, right top, from(#ff2764), to(#f82546));
    background: linear-gradient(to right, #ff2764, #f82546);
}
.express-detail {
  position: absolute;
  top:125rpx;
  width: 710rpx;
  background: #fff;
  border: 1rpx solid #f1f1f1;
  border-radius: 10rpx;
  height:1045rpx;
}
.order-express-info {
  font-size: 25rpx;
  color: #686868;
}
.order-express-info text {
    font-size: 25rpx;
    color: #333333;
}
.order-express-top {
  display: flex;
  flex-flow: row;
  padding: 0 20rpx;
  align-items: center;
  justify-content: space-between;
}
.order-express-top {
  height:200rpx;
  border: 1rpx solid #f1f1f1; 
}
.order-express-img image{
height:125rpx;
width:125rpx;
background:#ccc;
margin-right:20rpx; 
margin-top:20rpx; 
}
.order-address {
  display: flex;
  flex-flow: column;
  justify-content: center;
  height: 135rpx;
  border-bottom: 1rpx solid #f1f1f1; 
}
.order-express-address {
  padding: 0 20rpx;
}
.order-last-address{
  font-size: 25rpx;
  color: #878787;
}
.order-track-time {
  font-size: 25rpx;
  color: #999;
}
