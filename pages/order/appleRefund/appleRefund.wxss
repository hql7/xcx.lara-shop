/* pages/order/appleRefund/appleRefund.wxss */
page{
  background-color: #f1f2f6;
}

.goods{
  width: 100%;
  height: 210rpx;
  background-color: #fff;
  border-bottom: solid #e6e6e6 1rpx;
  border-top: solid #e6e6e6 1rpx;
}
.goods .left{
  width: 150rpx;
  height: 150rpx;
  float: left;
  margin-left: 4%;
  margin-top: 30rpx;
}
.goods .left image{
  width: 150rpx;
  height: 150rpx;
}
.goods .right{
  display: flex;
  flex-flow: column;
  justify-content: center;
  width: 550rpx;
  height: 150rpx;
  float: right;
  margin-top: 30rpx;
}
.goods .right .name{
  display: inline-block;
  width: 100%;
  font-size: 26rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 50rpx;
}
.goods .right .num{
  display: inline-block;
  width: 100%;
  font-size: 26rpx;
  line-height: 50rpx;
  color: #999;
}
.goods .right .price{
  display: inline-block;
  width: 100%;
  font-size: 26rpx;
  line-height: 50rpx;
  color: #F51322;
}
.goodsInfo{
  width: 100%;
  background-color: #fff;
  margin-top: 30rpx;
  border-top: solid #e6e6e6 1rpx;
  border-bottom: solid #e6e6e6 1rpx;
}
.goodsInfo view{
  width: 100%;
  height: 80rpx;
  margin-top: 20rpx;
}
.goodsInfo .title{
  float: left;
  width: 160rpx;
  height: 80rpx;
  font-size: 30rpx;
  color: #333;
  line-height: 100rpx;
  text-align: right;
  margin-left: 4%;
}
.goodsInfo .num input{
  width: 130rpx;
  height: 50rpx;
  border: solid #e6e6e6 1rpx;
  background-color: #f6f6f6;
  float: left;
  margin-left: 30rpx;
  text-align: center;
  margin-top: 25rpx;
}
.goodsInfo .num .afternum{
  font-size: 24rpx;
  color: #999;
  line-height: 100rpx;
  margin-left: 30rpx;
}
.goodsInfo .becase input{
  width: 400rpx;
  height: 80rpx;
  border: solid #e6e6e6 1rpx;
  float: left;
  margin-left: 30rpx;
  margin-top: 10rpx;
}
.goodsInfo .description{
  width: 100%;
  height: 200rpx;
}
.goodsInfo .submitApple{
  width: 100%;
  height: 200rpx;
}
.goodsInfo .description textarea{
  width: 450rpx;
  height: 200rpx;
  float: left;
  border: solid #e6e6e6 1rpx;
  margin-left: 30rpx;
  margin-top: 30rpx;
  font-size: 24rpx;
}

.submitApple .submit{
  width: 90%;
  height: 80rpx;
  font-size: 30rpx;
  background-color: #F51322;
  color: #fff;
  margin: 0 5%;
  margin-top: 240rpx;
}
.serverType{
  display: flex;
  flex-flow: row;
  align-items: center;
}
.server {
  display: flex;
  flex-flow: row;

}
.serverType .stitle{
  width: 200rpx;
  height: 80rpx;
  font-size: 30rpx;
  color: #333;
  line-height: 90rpx;
  text-align: right;
  margin-left: 4%;
}

.refund {
  display: flex;
  flex-flow: row;
}
.refund .refundStyle {
  font-size: 28rpx;
  width: 220rpx;
  color:#333;
  height: 60rpx;
  margin-left:20rpx; 
  text-align: center;
  line-height: 60rpx;
  border: 1rpx solid #e6e6e6;
}
.refund .refundActive {
  border: 1rpx solid #F51322;
  color: #F51322;
}
.hint {
  font-size: 28rpx;
}
