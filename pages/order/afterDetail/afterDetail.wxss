/* pages/order/afterDetail/afterDetail.wxss */
page{
  background-color: #f1f2f6;
}
.top{
  widows: 100%;
  height: 180rpx;
  background-color: #ff4200;
}
.top .status{
  display: inline-block;
  width: 100%;
  height: 50rpx;
  font-size: 34rpx;
  color: #fff;
  line-height: 50rpx;
  margin-left: 80rpx;
  margin-top: 40rpx;
}
.top .time{
  display: inline-block;
  height: 30rpx;
  font-size: 24rpx;
  line-height: 30rpx;
  color: #fff;
  margin-left: 80rpx;
}
.price{
  width: 100%;
  height: 214rpx;
  background-color: #fff;
  border-bottom: solid #e4e4e4 1rpx;
}
.price .amount{
  width: 92%;
  height: 106rpx;
  margin: 0 auto;
  border-bottom: solid #e4e4e4 1rpx;
  font-size: 34rpx;
  color: #333;
  line-height: 106rpx;
}
.amount .right{
  color: #f51322;
  float: right;
}
.price .refundType{
  width: 92%;
  height: 106rpx;
  margin: 0 auto;
  border-bottom: solid #e4e4e4 1rpx;
  font-size: 34rpx;
  color: #333;
  line-height: 106rpx;
}
.refundType .right{
  color: #666;
  float: right;
}

/* 售后流水记录 */
.process{
  width: 100%;
  height: 450rpx;
  background-color: #fff;
  margin-top: 20rpx;
}
.process .processInfo{
  width: 100%;
  height: 300rpx;
  border-bottom: solid #e4e4e4 1rpx;
}
.processInfo .left{
  width: 180rpx;
  height: 300rpx;
  font-size: 28rpx;
  color: #333;
  margin-left: 4%;
  float: left;
}
.processInfo .left text{
  width: 180rpx;
  height: 100rpx;
  line-height: 100rpx;
}
.processInfo .right{
  width: 500rpx;
  height: 300rpx;
  float: right;
}
.processInfo .right .title{
  display: inline-block;
  width: 90rpx;
  height: 100rpx;
  font-size: 22rpx;
  color: #f51322;
  line-height: 100rpx;
}
.processInfo .right .info{
  width: 380rpx;
  float: right;
  margin-top: 20rpx;
}
.info .actIntro{
  width: 380rpx;
  height: 50rpx;
  line-height: 20rpx;
}
.info .actIntro view{
  font-size: 18rpx;
  margin-left: 10rpx;
}
.process .cancel{
  width: 200rpx;
  height: 50rpx;
  background-color: #f51322;
  color: #fff;
  font-size: 26rpx;
  text-align: center;
  line-height: 50rpx;
  border-radius: 6rpx;
  margin-top: 30rpx;
  margin-left: 4%;
}
.process .hint{
  font-size: 20rpx;
  color: #999;
  margin-left: 4%;
}

/* 商家收货信息 */
.sellerInfo{
  width: 100%;
  height: 1300rpx;
  background-color: #fff;
  margin-top: 20rpx;
}
.sellerInfo text{
  display: inline-block;
  width: 92%;
  margin-left: 4%;
}
.sellerInfo .title{
  font-size: 34rpx;
  color: #333;
}
.sellerInfo .info{
  font-size: 30rpx;
  color: #444;
}
.sellerInfo .condition{
  font-size: 26rpx;
  color: #666;
}
.sellerInfo .xian{
  width: 92%;
  border-bottom: solid #e4e4e4 1rpx;
  margin-left: 4%;
  margin-top: 20rpx;
}
.sellerInfo .remind{
  height: 30rpx;
  font-size: 24rpx;
  color: #999;
}
.com,.no{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  border-bottom: solid #cecece 1rpx;
  border-top: solid #cecece 1rpx;
  margin-top: 40rpx;
}
.com label,.no label{
  width: 160rpx;
  height: 60rpx;
  font-size: 30rpx;
  margin-left: 4%;
  color: #333;
  float: left;
}
.com input,.no input{
  width: 550rpx;
  height: 60rpx;
  float: right;
  font-size: 20rpx;
}
form button{
  width: 200rpx;
  height: 50rpx;
  background-color: #f51322;
  color: #fff;
  line-height: 50rpx;
  font-size: 26rpx;
  margin-top: 40rpx;
  margin-left: 4%;
}
.weui-label {
  font-size: 30rpx;
}
.weui-select {
  font-size: 30rpx;   
}

