/* pages/mine/userInfo/userInfo.wxss */
page{
  background-color: #f1f2f6;
}
.info{
  width: 100%;
  height: 526rpx;
  background-color: #fff;
  border-top: solid 1rpx #ededed;
}
.info .head{
  width: 100%;
  height: 120rpx;
  border-bottom: solid 1rpx #ededed;
}
.head text{
  color: #333;
  font-size: 26rpx;
  float: left;
  margin-left: 4%;
  line-height: 120rpx;
}
.head image{
  width: 100rpx;
  height: 100rpx;
  float: right;
  margin-right: 4%;
  margin-top: 10rpx;
  border-radius: 50%;
}
.vip,.name,.nickname,.sex,.birthday{
  width: 100%;
  height: 80rpx;
  border-bottom: solid 1rpx #ededed;
}
.left{
  color: #333;
  font-size: 26rpx;
  float: left;
  margin-left: 4%;
  line-height: 80rpx;
}
.right{
  color: #999;
  font-size: 26rpx;
  float: right;
  margin-right: 6%;
  line-height: 80rpx;
}