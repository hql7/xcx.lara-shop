/* pages/mine/myCollection.wxss */
view{  
    box-sizing: border-box;  
}

.nav{
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 50rpx;
  border-top: 1rpx solid #e4e4e4;
  border-bottom: 1rpx solid #e4e4e4;
}
.nav text{
  font-size: 24rpx;
  color: #333333;
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent; 
}
.list{
  display: flex;
  align-items: center;
  justify-content: center; 
  padding: 22rpx 0;
  width: 750rpx;
  position: relative; 
  z-index: 90;       
  border-bottom: 1px solid #e4e4e4;
}
.list .goods{
  position: relative;  
  width:94%;
  background: #fff; 
  z-index: 90;  
  height: 150rpx;
}
.goods .cartIcon{
  position: absolute;
  right: 60rpx;
  bottom: 0;
  width: 50rpx;
  height: 40rpx;
  border: 1px solid #ff757e;
  border-radius: 6rpx;
  background-image: url('data:image/png;base64,');
  background-repeat: no-repeat;
  background-position: 10rpx 6rpx;
  background-size: 31rpx 31rpx;
}
.goods .pic{
  float: left;
  width: 150rpx;
  height: 150rpx;
}
.goods .gDetail{
  float: right;
  width: 540rpx; 
  height: 150rpx;
}
.gDetail .gName{
  height: 54rpx;
  font-size: 24rpx;
  color: #333333;
  white-space: nowrap;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  overflow: hidden;  
    
}
.gDetail .gPrice{
  font-size: 30rpx;
  color: #f51322;
}
.gDetail .active{
  display: flex;
  align-items: flex-start;
  margin-top: 12rpx;
  font-size: 20rpx;    
}
.gDetail .active .logo{
  /* width: 48rpx; */
  height: 26rpx;
  line-height: 26rpx;
  border: 1rpx solid #ffa8ae;
  text-align: center;
  color: #f51322;
}
.gDetail .active .txt{
  width: 236rpx;
  color: #999999;
  margin-left: 12rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.inner.del{
    position: absolute;
    background-color: #e64340;  
    width: 100rpx;height: 150rpx;line-height: 150rpx;
    text-align: center;  
    z-index: 4;   
    color: #fff;
    right:23rpx; 
    font-size: 24rpx;
}
.tips .noMore{
  display: flex;
  flex-direction: row;
  align-items: center;
  align-self: center;
  justify-content: center;  
  padding-top: 50rpx;
  font-size: 24rpx;
  color: #333333;
}
