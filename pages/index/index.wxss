/* 轮播图  */
.swiper {
  margin-top: 80rpx;  
  height: 400rpx;
  width: 100%;
}
.swiper image {
  height: 100%;
  width: 100%;
}
/* 分类 */
.kind{
  padding: 0 30rpx;
  margin-top: 10rpx;
  height: 140rpx;
  background-color: #fff;
}
.kind  view{
display: flex;
flex-flow: column;
justify-content: center;
align-items: center;
float: left;
width: 25%;
height: 100%;
}
.item image{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}
.item text{
  margin-top: 10rpx;
  font-size: 22rpx;
  color: #747c93;
} 

/* 商城快报  */
 .mallExpress{
  position: relative;
  display: flex; 
  align-items: center;
  justify-content: space-between;
  height: 60rpx;
  margin: 20rpx 0;
  padding: 0 20rpx;
  color: #333333;
  font-size: 22rpx;
  background-color: #fff;  
}
.important{
  margin-left: 4rpx;
  padding: 2rpx 5rpx;  
  border-radius: 4rpx;
  color: #fff;
  background-color: #ff3744;
}

.mallInfo{
  position: absolute;
  left: 150rpx;
  display: flex;
  line-height: 60rpx;
  font-size: 20rpx;
}
.mallInfo .sign{
  font-size: 22rpx;
  color: #ff3744;
  margin-right: 10rpx;
}
.mallExpress .more{
  height: 24rpx;
  line-height: 24rpx;  
  padding-left: 18rpx;
  font-size: 22rpx;
  border-left: 2rpx solid #c9c9c9;
}
.swiper_container {
 width: 400rpx;  
 height: 50rpx;
 margin-left: 8rpx;
 color: #333333;
}
.swiper_item {
 font-size: 20rpx;
 overflow: hidden;
 text-overflow: ellipsis;
 white-space: nowrap;
} 

/* 限时抢购 */
.flashSale{
  padding: 0 30rpx;
  height: 330rpx;
  background-color: #fff;
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
} 
.flashSale .fTitle{
  display: flex;
  justify-content: space-between;
  align-items: center; 
  height: 88rpx;
  color: #f51322;
}
.flashSale .txt{
  font-size: 36rpx;
}
.fTitle view{
  display: flex;
  align-items: center;
  vertical-align: 10rpx;
}
.fTitle .fSign{
  font-size: 46rpx;
  margin-right: 6rpx;
}
.fTitle .fMore{
  font-size: 24rpx;
  margin-right: 9rpx;
}
scroll-view{
  width:100%; 
  margin-top:10rpx;
  white-space: nowrap;
}
scroll-view .flashPage{
  display: inline-block;
}
.flashPage .pageColumn{
  display: flex;
  flex-flow: column;
  align-items: center;
  padding: 20rpx;
  justify-content: center;
}
.flashPage .pageColumn .flashPageImg{
  width:130rpx;
  height:120rpx;
}
.flashPage .pageColumn text{
  color:#FF0000; 
}
.flashPage .pageColumn .price{
  margin-top: 10rpx;  
  font-size: 24rpx;
  color: #ea2d31;
}
.flashPage .pageColumn .sell{
  font-size: 20rpx;
  color: #a9a9a9;
  text-decoration: line-through;
}
/* 购物板块分类 */
.plateKind{
  width: 100%;
  margin-top: 25rpx;
}
.plateKind .top{
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 200rpx;
}
.top view{
  float: left;
  display: flex;
  align-items: center; 
  width: 49.8%;
  background-color: #fff;
}

.top view .pTitle{
  display: flex;
  flex-flow: column;
  width: 160rpx;
}
.pTitle text{
  font-size: 16rpx;
  color: #7e7e7e;
}
.pTitle .title{
  margin-bottom: 10rpx;
  font-size: 24rpx;
  color: #ff9c00;
}
.pTitle .buy{
  width: 80rpx;
  height: 25rpx;
  margin-top: 20rpx;
  line-height: 25rpx;
  text-align: center;
  font-size: 14rpx;
  border-radius: 16rpx;
  background-color: #fffcf6;
  border: 1rpx solid #ff9c00;
}
.worldBuy .pTitle .title{
  color: #6e34c5;
}
.worldBuy .buy{
  background-color: #faf4ff;
  border: 1rpx solid #ce96ff;
}
.top image{
  width: 150rpx;
  height: 150rpx;
  padding: 20rpx 20rpx;
}
.bottom{
  margin-top: 1rpx;
  display: flex;
  justify-content: space-between;
  height: 282rpx;
}
.bottom view{
  display: flex;
  flex-flow: column;
  align-items: center;
  width: 33%;
  height: 282rpx;
  background-color: #fff;
}
.bottom view text{
  font-size: 18rpx;
  color: #999999;
}
.bottom view .title{
  margin-top: 30rpx;
  font-size: 24rpx;
}
.bottom .view1 .title{
  color: #de234c;
}
.bottom .view2 .title{
  color: #00bd6f;
}
.bottom .view3 .title{
  color: #f39e00;
}
.bottom image{
  width: 144rpx;
  height: 144rpx;
  padding: 20rpx 40rpx;
}

/* 热卖商品  */
.hotSale .topic{
  height: 84rpx;
  margin-bottom: 4rpx;
  background-image: url('data:image/png;base64,');
  background-repeat: no-repeat;
  background-position: 0rpx 0rpx;
  background-size: 100% 84rpx;
  text-align: center;
  line-height: 100rpx;
}
.topic text{
 font-size: 30rpx;
 color: #f7525c;
 letter-spacing: 10rpx;
}
.hotGoodslist .hotGoods{
  width: 49%;
  height: 460rpx;
  margin-bottom: 10rpx;
  float: left;
  background-color: #fff;
}
.hotGoodslist .hotGoods:nth-child(2n){
  margin-left: 10rpx;
}
.hotGoods .gImg{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 310rpx;
  padding: 20rpx 20rpx;
}
.gImg image{
  width: 100%;
  height: 100%;
}
.hotGoods .gDespriction{ 
  display: flex;
  flex-flow: column;
  justify-content: center;
  margin-top: 10rpx;
}
.gDespriction .gName{
  margin-left: 6rpx;
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #333333;
}
.gDespriction .info{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.gDespriction .gPrice{
  margin: 4rpx 0;
  font-size: 26rpx;
  color:#ff0000;
}
.gDespriction .gReviews{
  display: flex;
  align-items: center;  
  color: #adadad;
  font-size: 18rpx;  
}
.gDespriction .gReviews .rNum{
  width: 50rpx;
  margin-left: 2rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

