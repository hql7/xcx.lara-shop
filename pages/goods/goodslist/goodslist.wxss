/* pages/goods/goodslist/goodslist.wxss */
.fl{
  float: left;
}
.fr{
  float: right;
}
page{
  background-color: #f4f5f7;
}
/* 头部 */
.cHeader{
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  border: solid 1rpx #e2e2e2;
  position: fixed;
  left: 0;
  top: 0;
}
.cHeader .search{
  width: 88%;
  height: 56rpx;
  margin-left: -7%; 
  margin-top: -28rpx;
}
.cHeader .search icon{
  position: absolute;
  z-index: 99;
  top:30rpx;
  left: 29%;
}
.cHeader .search input{
  width: 100%;
  height: 100%;
  background-color: #f2f2f2;
  border-radius: 28rpx;
  font-size: 28rpx;
  text-align: center;
}


.swiperTab{ 
  margin-top: 84rpx;
  display: flex; 
  justify-content: space-around;
  width: 100%; 
  height: 62rpx;
  text-align: center;  
  line-height: 62rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #ededed;
} 
.swiperTablist{  
  font-size: 30rpx;  
  display: inline-block; 
  padding: 0 30rpx; 
  color: #333333; 
}  
.swiperTablist text{
  font-size: 26rpx;
  line-height: 62rpx;
}
.on{ 
  font-size: 26rpx;
  color: #f51322;  
}  
.swiperBox{ 
  display: block; 
  width: 100%; 
}
.swiperBox scroll-view:nth-child(1){
  height: 100%;
}
.swiperBox ::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent; 
}

/* 商品页面  */

/* 商品信息  */
.hotGoodslist .hotGoods{
  margin-bottom: 2%;
  width: 49%;
  height: 500rpx;
  float: left;
  background-color: #fff;
}
.hotGoodslist .hotGoods:nth-child(2n){
  margin-left: 2%;
}
.hotGoods .gImg{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 330rpx;
  padding: 20rpx 20rpx;
}
.gImg image{
  width: 100%;
  height: 100%;
}
.hotGoods .gDespriction{
  width: 320rpx; 
  height: 140rpx;   
  padding: 0 4rpx;
  display: flex;
  flex-flow: column;
  justify-content: center;
}
.gDespriction .gName{
  margin-left: 6rpx;
  font-size: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #333333;
}
.gDespriction .gPrice{
  margin: 4rpx 0;
  font-size: 26rpx;
  color:#ff0000;
}
.gDespriction .info{
  margin-left: 6rpx;
  width: auto;
  height: auto;
  font-size: 18rpx;
  color: #adadad;
}
.gDespriction .reviews{
  margin-right: 40rpx;
}

.goods{
  width: 100%;
  height: 220rpx;
  background-color: #fff;
  padding: 10rpx 0;
}
.goods .good{
  width: 92%;
  height: 220rpx;
  /* border: solid #e6e6e6 1rpx; */
  box-shadow:0 0 1rpx #000 inset;
  margin-left: 4%;
}
.good .left{
  width: 180rpx;
  height:180rpx;
  float: left;
  margin-left: 20rpx;
  margin-top: 20rpx;
}
.good .left image{
  width: 180rpx;
  height: 180rpx;
}
.good .right{
  width: 440rpx;
  height:180rpx;
  float: left;
  margin-left: 20rpx;
  margin-top: 20rpx;
}
.gName1{
  height: 70rpx;
  font-size: 32rpx;
  color: #333333;
  word-break: break-all;
  line-height: 35rpx; 
  overflow: hidden; 
}
.gPrice1{
  margin-top: 20rpx;
  padding-top: 10rpx 10rpx;
  font-size: 28rpx;
  color: #f51322;
}
.info1 text{
  font-size: 18rpx;
  color: #adadad;
}

.tips .noMore{
  width: 100%;
  display: inline-block;
  padding-top: 30rpx 0;
  font-size: 24rpx;
  color: #333333;
  text-align: center;
}

/* 覆盖层 */
.cover{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .7);
}
.cover .content{
  position: absolute;
  top: 0;
  left: 20%;
  width: 80%;
  height: 100%;
}
.scroll{
  background-color: #fff;
}
.content .cate{
  width: 94%;
  margin-left: 6%;
  padding: 20rpx 0;
}
.content .cate .cate1{
  width: 100%;
  height: 50rpx;
  color: #333;
  font-size: 32rpx;
  line-height: 50rpx;
}
.content .cate .cate2{
  width: 100%;
  color: #333;
  font-size: 26rpx;
}
.content .cate .cate2 text{
  padding: 10rpx 30rpx;
  background-color: #f1f2f6;
  margin-top: 20rpx;
  margin-left: 20rpx;
  display: inline-block;
  border-radius: 5rpx;
}
.coverHide{
  display: none
}
.coverShow{
  display: block
}
.content .cate .cate2 .select{
  background-color: #f51322;
  color: #fff;
  font-size: 26rpx;
}
.button{
  position: fixed;
  right: 0;
  bottom: 0;
  width: 80%;
  height: 70rpx;
  border-top: solid #e9e9e9 1rpx;
}
.button text{
  width: 50%;
  height: 70rpx;
  display: block;
  float: left;
  text-align: center;
  font-size: 30rpx;
  line-height: 70rpx;
}
.button text:nth-child(1){
  background-color: #fff;
  color: #333;
}
.button text:nth-child(2){
  background-color: #f51322;
  color: #fff;
}